{
    "name": "html",
    "version": "1.0.0",
    "author": "Dima Dodonov dimadodonov@icloud.com",
    "license": "WTFPL",
    "type": "module",
    "scripts": {
        "dev": "gulp watch",
        "build:dev": "gulp build",
        "build:prod": "gulp build --prod",
        "eslint": "eslint --format=node_modules/eslint-formatter-pretty src/js/",
        "eslint-fix": "npm run eslint -- --fix",
        "style:lint": "stylelint src/scss/**/*.scss --config ./.stylelintrc.json",
        "style:fix": "stylelint src/scss/**/*.scss --fix --config ./.stylelintrc.json",
        "prettier": "prettier --write src/**/*.js",
        "prepare": "husky install"
    },
    "lint-staged": {
        "src/js/**/*.{js, jsx}": [
            "node_modules/.bin/eslint --max-warnings=0",
            "prettier --write",
            "git add"
        ],
        "src/scss/**/*.scss": [
            "stylelint --fix --config ./.stylelintrc.json",
            "prettier --write",
            "git add"
        ]
    },
    "keywords": [
        "gulp",
        "js",
        "sass",
        "pug",
        "linters"
    ],
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not IE 11"
    ],
    "devDependencies": {
        "@babel/core": "^7.21.4",
        "@babel/eslint-parser": "^7.21.3",
        "@babel/preset-env": "^7.21.4",
        "@babel/register": "^7.21.0",
        "babelify": "^10.0.0",
        "browser-sync": "^2.29.1",
        "browserify": "^17.0.0",
        "del": "^7.0.0",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-formatter-pretty": "^5.0.0",
        "eslint-plugin-babel": "^5.3.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^8.0.0",
        "gulp-changed": "^4.0.3",
        "gulp-clean-css": "^4.3.0",
        "gulp-group-css-media-queries": "^1.2.2",
        "gulp-if": "^3.0.0",
        "gulp-imagemin": "^8.0.0",
        "gulp-notify": "^4.0.0",
        "gulp-plumber": "^1.2.1",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.1.0",
        "gulp-sass-glob": "^1.1.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-svg-sprite": "^2.0.3",
        "gulp-svgmin": "^4.1.0",
        "gulp-uglify": "^3.0.2",
        "husky": "^8.0.3",
        "imagemin-pngquant": "^9.0.2",
        "imagemin-webp": "^8.0.0",
        "import-fresh": "^3.3.0",
        "lint-staged": "^13.2.1",
        "postcss-loader": "^7.2.4",
        "prettier": "^2.8.7",
        "sass": "^1.61.0",
        "stylelint": "15.4.0",
        "stylelint-config-standard-scss": "^8.0.0",
        "stylelint-order": "^6.0.3",
        "stylelint-scss": "^4.6.0",
        "stylelint-selector-bem-pattern": "^2.1.1",
        "vinyl-buffer": "^1.0.1",
        "vinyl-source-stream": "^2.0.0"
    },
    "dependencies": {
        "focus-visible": "^5.2.0",
        "normalize.css": "^8.0.1",
        "smart-grid": "^2.1.2",
        "svg4everybody": "^2.1.9",
        "vanilla-lazyload": "^17.8.3"
    }
}
